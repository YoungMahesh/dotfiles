{
  // editor UI settings
  "window.zoomLevel": 2.5,
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,

  // editor behavior settings
  "security.workspace.trust.untrustedFiles": "open",
  "update.mode": "none", // do not update vscode automatically
  "extensions.ignoreRecommendations": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.quickOpen" // ctrl+p for previous-command instead of quick-open while in terminal
  ],
  "files.autoSave": "onFocusChange",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // git settings
  "git.openRepositoryInParentFolders": "never",
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.renderSideBySide": false,

  // copilot settings
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // language specific settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.prettierPath": "./node_modules/prettier",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.associations": {
    "*.json": "jsonc"
  },
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.location": "top",
  "kilo-code.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "kilo-code.deniedCommands": [],
  "editor.lineNumbers": "relative",
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "roo-cline.deniedCommands": [],
  "vscode-neovim.neovimExecutablePaths.linux": "/opt/nvim-linux64/bin/nvim",
  //"[dockerfile]": {
  //  "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  //},
